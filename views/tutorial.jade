
extend ./layout 

block content

  .conntainer
    .row
      .col-md-12.paper
        .col-md-8.col-md-offset-2

          #overlay.tutorial.togglesize.startsize
            #main
              #tutorialTop.togglesize.hide-when-small
                img(src='img/docker-letters.png',alt="Docker")
                  h1 Learn Docker
                  a#fullSizeClose.closeButton(href="#")
                    img(src="img/fullscreen_exit_32x32.png",title="close fullscreen")

                      #progress-indicator
                        span#progress-marker-0.class="progress-marker
                          svg(xmlns="http://www.w3.org/2000/svg",version="1.1",style="width:30px; height:30px;")
                            circle(cx="50%",cy="50%",r="50%",fill="#008BB8")
                              text(x="50%",dy="50%",text-anchor="middle",dominant-baseline="central",fill="white") 1

              #leftside.left.togglesize.hide-when-small
                #instructions
                  .circle.info-circle

                  .text
                  .assignment

                #tips
                  .circle.info-circle


                  .tiptext
                    h3 Tips
                    #tipHiddenText.box
                      click here for tips
                    #tipShownText
                      This is what the written tip looks like


                #command
                  .text
                    h3 Show expected command
                    #commandHiddenText.box
                      | click here to see the expected command
                    #commandShownText.box.hidden">
                      | This is what the written tip looks like


              #starttext.togglesize.startsize.hide-when-full
                h4 Learn the first steps of using Docker, such as:
                  ul
                    li Finding and downloading images
                    li Running hello world
                    li Committing your changes
                    li Pushing an image to the repository

                div(style="text-align: center")
                  a#fullSizeOpen.btn.btn-primary.primary-action-button(href="#") Start!

              #rightside
                #terminal-extenstion.right.togglesize.smallsize
                #terminal.right.togglesize.smallsize

                #results.results.togglesize(style="display: hidden;")
                  #resulttext.text
                    button#buttonNext.docker-btn-blue.docker-btn-large(disabled="disabled",tabindex="0") next
                    button#buttonFinish.docker-btn-blue.docker-btn-large.hidden(tabindex="0") Finish and see what's next!

                  #feedback.feedback.togglesize.hide-when-small
                    input#feedbackInput(type="text",placeholder="feedback?")
                    button#feedbackSubmit Submit